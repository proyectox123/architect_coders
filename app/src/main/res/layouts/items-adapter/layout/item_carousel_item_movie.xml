<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="movie"
                type="com.example.android.domain.Movie" />
    </data>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/poster_detail_carousel_width"
                android:layout_height="@dimen/poster_detail_carousel_height"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_movie_poster_item"
                android:src="@mipmap/ic_launcher_round"
                app:carouselUrl="@{movie.posterPath}"
                tools:scaleType="centerCrop"/>

    </LinearLayout>
</layout>